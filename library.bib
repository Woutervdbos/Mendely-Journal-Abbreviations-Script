title = {{Intellectual abilities and white matter microstructure in development: a diffusion tensor imaging study}},
url = {http://onlinelibrary.wiley.com/doi/10.1002/hbm.20962/abstract papers2://publication/doi/10.1002/hbm.20962},
volume = {31},
year = {2010}
}
