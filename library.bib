journal = {PLoS ONE},
number = {11},
pages = {e27272},
title = {{Synchronized drumming enhances activity in the caudate and facilitates prosocial commitment--if the rhythm comes easily.}},
url = {http://eutils.ncbi.nlm.nih.gov/entrez/eutils/elink.fcgi?dbfrom=pubmed\&id=22110623\&retmode=ref\&cmd=prlinks papers2://publication/doi/10.1371/journal.pone.0027272},
