journal = {Journal of cognitive neuroscience},
number = {4},
pages = {936--946},
title = {{Feedback-related negativity codes prediction error but not behavioral adjustment during probabilistic reversal learning}},
url = {http://www.mitpressjournals.org/doi/abs/10.1162/jocn.2010.21456?url\_ver=Z39.88-2003\&rfr\_id=ori:rid:crossref.org\&rfr\_dat=cr\_pub=pubmed papers2://publication/doi/10.1162/jocn.2010.21456},
