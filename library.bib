doi = {10.1371/journal.pone.0012983},
editor = {Wong, Kelvin Kian Loong},
file = {::},
issn = {1932-6203},
journal = {PLoS ONE},
keywords = {Computational Biology/Genomics,Computational Biology/Literature Analysis,Computer Science/Applications,Computer Science/Information Technology,Research Article},
month = oct,
number = {10},
pages = {e12983},
publisher = {Public Library of Science},
title = {{Automatic Figure Ranking and User Interfacing for Intelligent Figure Search}},
url = {http://dx.plos.org/10.1371/journal.pone.0012983},
volume = {5},
year = {2010}
}
