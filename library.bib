series = {APSA 2011 Annual Meeting Paper},
title = {{Not with a Bang but a Whimper The Politics of Accountability and Open Data in the UK}},
url = {http://papers.ssrn.com/sol3/papers.cfm?abstract\_id=1899790},
year = {2011}
}
